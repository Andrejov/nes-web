    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "ng serve",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "serve"]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch express",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["start"]
        },
        {
            "name": "Launch firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:4200/"
            // "pathMappings": [{
            //     "url": "http://localhost",
            //     "path": "${workspaceFolder}"
            // }]
        }
    ]
}